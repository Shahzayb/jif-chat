{
  "name": "jif-chat",
  "version": "1.0.0",
  "description": "It's a gif based chat application",
  "private": true,
  "scripts": {
    "start": "npm start --prefix server",
    "client": "npm start --prefix client",
    "server": "npm run server --prefix server",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
